<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">
    <TextView
        android:id="@+id/brugernavnTaber_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="52sp"
        android:textStyle="bold"
        android:fontFamily="@font/galgelegtekst"
        android:textColor="@color/Black"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/galgelegTaber"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/forkert6_sketch"
        android:alpha="0.66"/>

    <TextView
        android:id="@+id/taber_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Du tabte."
        android:fontFamily="@font/galgelegtekst"
        android:textSize="52sp"
        android:textColor="@color/ColorRed"
        android:gravity="center"/>

    <TextView
        android:id="@+id/rigtigeord_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:fontFamily="@font/knapfont"
        android:textColor="@color/RedRose"
        android:gravity="center"/>

    <Button
        android:id="@+id/taberNytSpilKnap"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Nyt spil"
        android:background="@color/colorWhite"
        android:textColor="@color/ColorRed"
        android:alpha="0.7"
        android:fontFamily="@font/knapfont"/>

</LinearLayout>
